@model EMarket.Models.Product

@{
    ViewData["Title"] = "Ürün Detayları";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" />
        </div>
        <div class="col-md-7">
            <h2 class="mb-3">@Model.Name</h2>
            <h4 class="text-muted">@Model.Description</h4>
            <h3 class="text-dark mt-3">@Model.Price ₺</h3>

            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <button type="submit" class="btn btn-success mt-3">
                    🛒 Sepete Ekle
                </button>
            </form>
        </div>
    </div>
</div>

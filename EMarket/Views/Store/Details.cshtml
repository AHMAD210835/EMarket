@model EMarket.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div id="successAlert" class="alert alert-success alert-dismissible" role="alert" style="display: none;">
    Ürün başarıyla sepete eklendi!
    <button type="button" class="btn-close" onclick="hideAlert()" aria-label="Kapat"></button>
</div>



<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        
        <div class="col-md-5 text-center">
            <div class=" p-3 bg-white rounded">
                <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 400px;" alt="@Model.Name" />
            </div>
        </div>

      
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.Name</h2>
            <h5 class="text-muted mb-3 mt-4"><span class="text-dark fw-bold mb-3">Description :</span><br />@Model.Description</h5>
            <h3 class="text-dark fw-bold mb-4 mt-5">@Model.Price.ToString("N2") ₺</h3>


            <a onclick="showAlert()" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-dark btn-lg me-2 mt-3">
                <i class="bi bi-bag"></i> Add To Cart
            </a>
            

         

            
            <a asp-controller="Store" asp-action="Index" class="btn btn-outline-secondary btn-lg mt-3">
                <i class="bi bi-arrow-90deg-left"></i> Store
            </a>
        </div>
    </div>
</div>

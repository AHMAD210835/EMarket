@model List<EMarket.Models.Product>

@{
    ViewData["Title"] = $"CategoryName: {ViewData["CategoryName"]}";
}



<h2 class="text-center mb-4"> @ViewData["CategoryName"] </h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 border-0 text-center">

                <a asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">
                    <img src="@item.ImageUrl" class="card-img img-fluid mx-auto d-block" style="height: 220px; width: auto; object-fit: contain;" alt="@item.Name" />
                </a>

                <div class="card-body">
                    <a asp-controller="Store" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                        <h5 class="card-title fw-bold text-truncate product-title text-dark">@item.Name</h5>
                    </a>
                    <p class="card-text text-muted text-truncate product-desc">@item.Description</p>
                    <p class="fw-bold">@item.Price.ToString("N2") ₺</p>
                </div>

                <div class="card-footer">
                    <a onclick="showAlert()" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-cart">
                        <i class="bi bi-bag"></i> Add to Cart
                    </a>
                    <a asp-controller="Store" asp-action="Details" asp-route-id="@item.Id" class="btn btn-details">
                        <i class="bi bi-eye"></i> View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>

